@model MarinaRegSystem.Models.DoctorSchedule
@{
    ViewData["Title"] = "تعديل جدول دوام الطبيب";
}

<h3 class="mb-4 text-center">تعديل جدول دوام الطبيب</h3>

<form asp-action="EditDoctorSchedule" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="DoctorId" class="form-label"></label>
        <select asp-for="DoctorId" asp-items="ViewBag.Doctors" class="form-select">
            <option value="">اختر الطبيب</option>
        </select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="DayOfWeek" class="form-label"></label>
        <select asp-for="DayOfWeek" class="form-select">
            <option value="">اختر اليوم</option>
            @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
{
    if (day.Equals(Model.DayOfWeek))
    {
        <option value="@day" selected>@day</option>
    }
    else
    {
        <option value="@day">@day</option>
    }
}
        </select>
        <span asp-validation-for="DayOfWeek" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="StartTime" class="form-label"></label>
        <input asp-for="StartTime" type="time" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="EndTime" class="form-label"></label>
        <input asp-for="EndTime" type="time" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="AppointmentDuration" class="form-label"></label>
        <input asp-for="AppointmentDuration" class="form-control" />
        <span asp-validation-for="AppointmentDuration" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="BreakDuration" class="form-label"></label>
        <input asp-for="BreakDuration" class="form-control" />
        <span asp-validation-for="BreakDuration" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="MaxAppointmentsPerDay" class="form-label"></label>
        <input asp-for="MaxAppointmentsPerDay" class="form-control" />
        <span asp-validation-for="MaxAppointmentsPerDay" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <div class="form-check mt-4">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">حفظ التعديلات</button>
        <a asp-action="DoctorSchedules" class="btn btn-secondary">إلغاء</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
