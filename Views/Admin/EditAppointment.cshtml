@model MarinaRegSystem.Models.Appointment

@{
    ViewData["Title"] = "تعديل الحجز";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditAppointment" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="PatientName" class="form-label"></label>
        <input asp-for="PatientName" class="form-control" />
        <span asp-validation-for="PatientName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UserId" class="form-label"></label>
        <input asp-for="UserId" type="number" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DepartmentId" class="form-label"></label>
        <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments"></select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DoctorId" class="form-label"></label>
        <select asp-for="DoctorId" class="form-select" asp-items="ViewBag.Doctors"></select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AppointmentDate" class="form-label"></label>
        <input asp-for="AppointmentDate" type="date" class="form-control" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AppointmentTime" class="form-label"></label>
        <input asp-for="AppointmentTime" type="time" class="form-control" />
        <span asp-validation-for="AppointmentTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="0">قيد الانتظار</option>
            <option value="1">تم التأكيد</option>
            <option value="2">مرفوض</option>
            <option value="3">مكتمل</option>
            <option value="4">ملغي</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RejectionReason" class="form-label"></label>
        <textarea asp-for="RejectionReason" class="form-control"></textarea>
        <span asp-validation-for="RejectionReason" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">حفظ</button>
    <a asp-action="Appointments" class="btn btn-secondary">إلغاء</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
