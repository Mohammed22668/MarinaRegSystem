@model MarinaRegSystem.Models.Department

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "تعديل القسم";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditDepartment" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="Status" class="form-check-input" type="checkbox" />
        <label asp-for="Status" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
    <a asp-action="Departments" class="btn btn-secondary">إلغاء</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
