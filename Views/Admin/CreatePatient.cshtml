                                <input asp-for="FourthName" class="form-control" />
                                <span asp-validation-for="FourthName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mt-3">
                            <label asp-for="EnglishFullName" class="form-label"></label>
                            <input asp-for="EnglishFullName" class="form-control" />
                        </div>

                        <div class="row mt-3 g-2">
                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label fw-bold">تاريخ الميلاد</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
