@{
    ViewData["Title"] = "لوحة تحكم الأدمن";
}

@section Head {
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>لوحة تحكم الأدمن - مستشفى مارينا</title>

        <!-- Bootstrap RTL CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

        <!-- FontAwesome -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

        <style>
            body {
                background: #f8f9fa;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }
            .dashboard-card {
                border-radius: 1rem;
                transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
                cursor: pointer;
                box-shadow: 0 4px 10px rgb(0 0 0 / 0.1);
                background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
                color: white;
                padding: 2rem;
                min-height: 160px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }
            .dashboard-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 20px rgb(0 0 0 / 0.2);
                text-decoration: none;
                color: white;
            }
            .dashboard-icon {
                font-size: 3.5rem;
                margin-bottom: 1rem;
                opacity: 0.85;
            }
            .dashboard-title {
                font-size: 1.5rem;
                font-weight: 700;
                text-align: center;
            }
            .dashboard-subtitle {
                font-size: 0.9rem;
                opacity: 0.8;
                margin-top: 0.25rem;
            }
            /* ألوان مخصصة لكل بطاقة */
            .bg-appointments { background: linear-gradient(135deg, #f6d365 0%, #fda085 100%); }
            .bg-doctors { background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%); color: #333; }
            .bg-departments { background: linear-gradient(135deg, #fccb90 0%, #d57eeb 100%); }
            .bg-schedule { background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%); color: #333; }

        </style>
    </head>
}

<div class="container py-5">
    <h1 class="mb-5 text-center fw-bold text-primary">لوحة تحكم الأدمن</h1>

    <div class="row g-4 justify-content-center">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <a href="@Url.Action("Appointments", "Admin")" class="dashboard-card bg-appointments text-decoration-none">
                <i class="fas fa-calendar-check dashboard-icon"></i>
                <div class="dashboard-title">إدارة الحجوزات</div>
                <div class="dashboard-subtitle">عرض وتعديل وحذف المواعيد</div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <a href="@Url.Action("Doctors", "Admin")" class="dashboard-card bg-doctors text-decoration-none">
                <i class="fas fa-user-md dashboard-icon"></i>
                <div class="dashboard-title">إدارة الأطباء</div>
                <div class="dashboard-subtitle">إضافة وتعديل وحذف الأطباء</div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <a href="@Url.Action("Departments", "Admin")" class="dashboard-card bg-departments text-decoration-none">
                <i class="fas fa-building dashboard-icon"></i>
                <div class="dashboard-title">إدارة الأقسام</div>
                <div class="dashboard-subtitle">عرض وتعديل أقسام المستشفى</div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <a href="@Url.Action("DoctorSchedules", "Admin")" class="dashboard-card bg-schedule text-decoration-none">
                <i class="fas fa-clock dashboard-icon"></i>
                <div class="dashboard-title">جدول دوام الأطباء</div>
                <div class="dashboard-subtitle">إدارة جداول مواعيد الأطباء</div>
            </a>
        </div>
    </div>
</div>

@section Footer {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
