@{
    ViewData["Title"] = "لوحة التحكم";
}

@section Head {
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
        <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
        <title>مستشفى مارينا - لوحة التحكم</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.rtl.min.css">

        <!-- Fontawesome CSS -->
        <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
        <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">

        <!-- Feathericon CSS -->
        <link rel="stylesheet" href="~/assets/css/feather.css">

        <!-- Main CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    </head>
}

@section currentPage {
    <li class="menu-side"><img src="~/assets/img/icons/menu-icon-01.svg" alt=""></li>
    <li class="breadcrumb-item" style="vertical-align:middle;margin-right:10px"><a href="#" style="font-weight:bolder">لوحة التحكم</a></li>
}

<div class="row">
    <div class="col-xl-3 col-sm-6 col-12">
        <div class="card bg-white">
            <div class="card-body">
                <div class="dash-widget-header">
                    <span class="dash-widget-icon bg-primary">
                        <i class="fas fa-hospital"></i>
                    </span>
                    <div class="dash-count">
                        <h3>@ViewBag.DepartmentsCount</h3>
                    </div>
                </div>
                <div class="dash-widget-info">
                    <h6 class="text-muted">الأقسام</h6>
                    <div class="progress progress-sm">
                        <div class="progress-bar bg-primary w-50"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 col-12">
        <div class="card bg-white">
            <div class="card-body">
                <div class="dash-widget-header">
                    <span class="dash-widget-icon bg-success">
                        <i class="fas fa-user-md"></i>
                    </span>
                    <div class="dash-count">
                        <h3>@ViewBag.DoctorsCount</h3>
                    </div>
                </div>
                <div class="dash-widget-info">
                    <h6 class="text-muted">الأطباء</h6>
                    <div class="progress progress-sm">
                        <div class="progress-bar bg-success w-50"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 col-12">
        <div class="card bg-white">
            <div class="card-body">
                <div class="dash-widget-header">
                    <span class="dash-widget-icon bg-info">
                        <i class="fas fa-stethoscope"></i>
                    </span>
                    <div class="dash-count">
                        <h3>@ViewBag.ServicesCount</h3>
                    </div>
                </div>
                <div class="dash-widget-info">
                    <h6 class="text-muted">الخدمات</h6>
                    <div class="progress progress-sm">
                        <div class="progress-bar bg-info w-50"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 col-12">
        <div class="card bg-white">
            <div class="card-body">
                <div class="dash-widget-header">
                    <span class="dash-widget-icon bg-warning">
                        <i class="fas fa-calendar-check"></i>
                    </span>
                    <div class="dash-count">
                        <h3>@ViewBag.AppointmentsCount</h3>
                    </div>
                </div>
                <div class="dash-widget-info">
                    <h6 class="text-muted">المواعيد</h6>
                    <div class="progress progress-sm">
                        <div class="progress-bar bg-warning w-50"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-6 d-flex">
        <div class="card flex-fill">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title">آخر المواعيد</h5>
                    <a asp-controller="Appointment" asp-action="Index" class="btn btn-primary btn-sm">عرض الكل</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>المريض</th>
                                <th>الطبيب</th>
                                <th>التاريخ</th>
                                <th>الحالة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in (List<RecentAppointmentViewModel>)ViewBag.RecentAppointments)
                            {
                                <tr>
                                    <td>@appointment.PatientName</td>
                                    <td>@appointment.DoctorName</td>
                                    <td>@appointment.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @switch (appointment.Status)
                                        {
                                            case AppointmentStatus.Pending:
                                                <span class="badge bg-warning">قيد الانتظار</span>
                                                break;
                                            case AppointmentStatus.Confirmed:
                                                <span class="badge bg-success">مؤكد</span>
                                                break;
                                            case AppointmentStatus.Cancelled:
                                                <span class="badge bg-danger">ملغي</span>
                                                break;
                                            case AppointmentStatus.Completed:
                                                <span class="badge bg-info">مكتمل</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6 d-flex">
        <div class="card flex-fill">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title">الأطباء النشطين</h5>
                    <a asp-action="Doctors" class="btn btn-primary btn-sm">عرض الكل</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>الطبيب</th>
                                <th>القسم</th>
                                <th>عدد المواعيد</th>
                                <th>التقييم</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doctor in ViewBag.ActiveDoctors)
                            {
                                <tr>
                                    <td>
                                        <h2 class="table-avatar">
                                            <a href="profile.html" class="avatar avatar-sm mr-2">
                                                <img class="avatar-img rounded-circle" src="@doctor.ImageUrl" alt="User Image">
                                            </a>
                                            <a href="profile.html">@doctor.Name</a>
                                        </h2>
                                    </td>
                                    <td>@doctor.DepartmentName</td>
                                    <td>@doctor.AppointmentsCount</td>
                                    <td>
                                        <div class="rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fas fa-star @(i <= doctor.Rating ? "filled" : "")"></i>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Footer {
    <!-- jQuery -->
    <script src="~/assets/js/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Feather Js -->
    <script src="~/assets/js/feather.min.js"></script>

    <!-- Slimscroll -->
    <script src="~/assets/js/jquery.slimscroll.js"></script>

    <!-- Custom JS -->
    <script src="~/assets/js/app.js"></script>
} 