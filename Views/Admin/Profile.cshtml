@model MarinaRegSystem.Models.Patient

@using MarinaRegSystem.Helpers;

@{
    ViewData["Title"] = "ملف المريض";
}

@section currentPage {
    <li class="breadcrumb-item active">ملف المريض</li>
}

@section Head {

    <meta charset="utf-8" lang="ar">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" href="~/assets/img/favicon.png">
    <title>لوحة تحكم الأدمن - مستشفى مارينا</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.rtl.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">

    <!-- Select2 CSS -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/select2.min.css">

    <!-- Datatables CSS -->
    <link rel="stylesheet" href="~/assets/plugins/datatables/datatables.min.css">

    <!-- Feathericon CSS -->
    <link rel="stylesheet" href="~/assets/css/feather.css">

    <!-- Main CSS -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">

    <!-- Animate -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Tajawal', sans-serif;
        }

        .patient-card {
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            background-color: white;
            padding: 2rem;
            margin-top: 2rem;
        }

        .patient-name {
            font-size: 1.75rem;
            color: #007bff;
            font-weight: bold;
        }

        .patient-info strong {
            color: #333;
        }

        .table-rounded {
            border-radius: 10px;
            overflow: hidden;
        }

        .status-badge {
            padding: 0.4em 0.8em;
            border-radius: 50px;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .text-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .text-confirmed {
            background-color: #d4edda;
            color: #155724;
        }

        .text-rejected {
            background-color: #f8d7da;
            color: #721c24;
        }

        .text-cancelled {
            background-color: #e9ecef;
            color: #343a40;
        }

        .btn-custom {
            border-radius: 50px;
            padding: 0.5rem 1.5rem;
            font-weight: bold;
        }
    </style>
}


<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary fw-bold">
        <i class="fas fa-user me-2"></i>
        <div style="font-size: 1.8rem;">@Model.FirstName @Model.SecondName @Model.ThirdName @Model.FourthName</div>
        <div class="text-secondary" style="font-size: 1.1rem;">رقم المريض: @Model.PatientNumber</div>
    </h2>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <div class="row g-4 align-items-start">

                <!-- الصورة -->
                <div class="col-md-3 text-center">
                    <img src="~/assets/img/user.jpg" class="rounded-circle img-thumbnail shadow-sm"
                        style="width: 130px;" />
                    <p class="mt-2 text-muted small">صورة رمزية</p>
                </div>

                <!-- المعلومات -->
                <div class="col-md-9">
                    <div class="row g-3">

                        <div class="col-md-6"><i class="fas fa-user text-primary me-1"></i> <strong>الاسم
                                الرباعي:</strong> @Model.FirstName @Model.SecondName @Model.ThirdName @Model.FourthName
                        </div>
                        <div class="col-md-6"><i class="fas fa-language text-primary me-1"></i> <strong>الاسم
                                بالإنجليزية:</strong> @Model.EnglishFullName</div>
                        <div class="col-md-6"><i class="fas fa-id-card text-primary me-1"></i> <strong>رقم
                                الهوية:</strong> @Model.NationalNumber</div>
                        <div class="col-md-6"><i class="fas fa-passport text-primary me-1"></i> <strong>رقم
                                الجواز:</strong> @Model.PassportNumber</div>
                        <div class="col-md-6"><i class="fas fa-shield-alt text-primary me-1"></i> <strong>رقم
                                الضمان:</strong> @Model.InsuranceNumber</div>
                        <div class="col-md-6"><i class="fas fa-birthday-cake text-primary me-1"></i> <strong>تاريخ
                                الميلاد:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")</div>
                        <div class="col-md-6"><i class="fas fa-hourglass-half text-primary me-1"></i>
                            <strong>العمر:</strong> @Model.Age
                        </div>
                        <div class="col-md-6"><i class="fas fa-venus-mars text-primary me-1"></i>
                            <strong>الجنس:</strong> @Model.Gender
                        </div>
                        <div class="col-md-6"><i class="fas fa-phone-alt text-primary me-1"></i> <strong>رقم
                                الهاتف:</strong> @Model.PhoneNumber</div>
                        <div class="col-md-6"><i class="fas fa-tint text-primary me-1"></i> <strong>فصيلة الدم:</strong>
                            @Model.BloodType</div>

                        <div class="col-md-6"><i class="fas fa-ruler-vertical text-primary me-1"></i>
                            <strong>الطول:</strong> @Model.Height سم
                        </div>
                        <div class="col-md-6"><i class="fas fa-weight text-primary me-1"></i> <strong>الوزن:</strong>
                            @Model.Weight كغم</div>

                        <div class="col-md-6"><i class="fas fa-flag text-primary me-1"></i> <strong>البلد:</strong>
                            @Model.Country</div>
                        <div class="col-md-6"><i class="fas fa-map-marker-alt text-primary me-1"></i>
                            <strong>المحافظة:</strong> @Model.Province
                        </div>
                        <div class="col-md-6"><i class="fas fa-city text-primary me-1"></i> <strong>المدينة:</strong>
                            @Model.City</div>
                        <div class="col-md-6"><i class="fas fa-home text-primary me-1"></i> <strong>الحي:</strong>
                            @Model.Neighborhood</div>
                        <div class="col-md-12"><i class="fas fa-map-pin text-primary me-1"></i>
                            <strong>العنوان:</strong> @Model.Address
                        </div>

                        <hr class="my-3">

                        <div class="col-md-6"><i class="fas fa-notes-medical text-primary me-1"></i> <strong>الأمراض
                                المزمنة:</strong> @Model.ChronicDiseases</div>
                        <div class="col-md-6"><i class="fas fa-stethoscope text-primary me-1"></i>
                            <strong>الأعراض:</strong> @Model.Symptoms
                        </div>

                        @if (Model.Gender != "ذكر")
                        {
                            <div class="col-md-6"><i class="fas fa-female text-primary me-1"></i> <strong>مدة الدورة
                                    الشهرية:</strong> @Model.MenstrualCycleDuration</div>
                        }

                        <div class="col-md-6"><i class="fas fa-info-circle text-primary me-1"></i>
                            <strong>ملاحظات:</strong> @Model.AdditionalNotes
                        </div>
                        <div class="col-md-6"><i class="fas fa-user-friends text-primary me-1"></i> <strong>أقرب
                                شخص:</strong> @Model.ClosePerson</div>
                    </div>
                </div>

            </div>
        </div>
    </div>



    <!-- الحجوزات السابقة -->
    <h4 class="mt-5 mb-3">الحجوزات السابقة</h4>

    @if (Model.Appointments != null && Model.Appointments.Any())
    {
        <table class="table table-bordered table-hover text-center">
            <thead class="table-light">
                <tr>
                    <th>التاريخ</th>
                    <th>الوقت</th>
                    <th>القسم</th>
                    <th>الطبيب</th>

                    <th>الحالة</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appt in Model.Appointments.OrderByDescending(a => a.AppointmentDate))
                {
                    <tr>
                        <td>@appt.AppointmentDate.ToString("yyyy-MM-dd")</td>
                        <td>@appt.AppointmentTime.ToString(@"hh\:mm")</td>
                        <td>@appt.Department?.Name</td>
                        <td>@appt.Doctor?.Name</td>

                        <td><span class="badge bg-info">@appt.Status.GetDisplayName()</span></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">لا توجد حجوزات سابقة.</div>
    }

    <h4 class="mt-5 mb-3">الفواتير المخبرية</h4>

    @if (Model.LabInvoices != null && Model.LabInvoices.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>رقم الفاتورة</th>
                        <th>تاريخ الإنشاء</th>
                        <th>عدد التحاليل</th>
                        <th>إجمالي المبلغ</th>
                        <th>الحالة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model.LabInvoices.OrderByDescending(i => i.CreatedAt))
                    {
                        var totalAmount = invoice.LabInvoiceTests?.Sum(t => t.Price) ?? 0;
                        var statusText = invoice.Status switch
                        {
                            "Pending" => "قيد الانتظار",
                            "Confirmed" => "تم التأكيد",
                            "Rejected" => "مرفوض",
                            "Cancelled" => "ملغي",
                            "Completed" => "مكتمل",
                            _ => invoice.Status
                        };

                        <tr>
                            <td>@invoice.Id</td>
                            <td>@invoice.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@invoice.LabInvoiceTests?.Count ?? 0</td>
                            <td>@totalAmount.ToString("N0") دينار</td>
                            <td><span class="badge bg-secondary">@statusText</span></td>
                            <td>
                                <a asp-action="ViewLabInvoiceDetails" asp-route-id="@invoice.Id"
                                    class="btn btn-sm btn-outline-info">
                                    عرض التفاصيل
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-3">
            لا توجد فواتير مخبرية مسجلة لهذا المريض.
        </div>
    }

    <div class="text-center mt-4">
        <a href="~/Admin/AllPatients" class="btn btn-outline-secondary rounded-pill">
            <i class="fas fa-arrow-left me-1"></i> العودة إلى قائمة المرضى
        </a>
    </div>
</div>


@section Footer {
    <!-- jQuery -->
    <script src="~/assets/js/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Feather Js -->
    <script src="~/assets/js/feather.min.js"></script>

    <!-- Slimscroll -->
    <script src="~/assets/js/jquery.slimscroll.js"></script>

    <!-- Select2 Js -->
    <script src="~/assets/js/select2.min.js"></script>

    <!-- Datepicker JS -->
    <script src="~/assets/plugins/moment/moment.min.js"></script>
    <script src="~/assets/js/bootstrap-datetimepicker.min.js"></script>

    <!-- Custom JS -->
    <script src="~/assets/js/script.js"></script>

    <!-- Validation Scripts -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}