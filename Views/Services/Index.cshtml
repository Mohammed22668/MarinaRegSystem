@model IEnumerable<MarinaRegSystem.Models.Service>

@{
    ViewData["Title"] = "الخدمات";
}

@section currentPage {
    <li class="menu-side"><img src="~/assets/img/icons/menu-icon-04.svg" alt=""></li>
    <li class="breadcrumb-item" style="vertical-align:middle;margin-right:10px"><a href="#" style="font-weight:bolder">الخدمات</a></li>
}

<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">خدماتنا الطبية</h3>
                    <p class="text-muted">اكتشف مجموعة واسعة من الخدمات الطبية المتخصصة التي نقدمها</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var service in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card service-card">
                        <div class="card-body">
                            <div class="service-icon">
                                <i class="fas fa-stethoscope fa-3x text-primary"></i>
                            </div>
                            <h4 class="card-title">@service.Name</h4>
                            <p class="card-text">@service.Description</p>
                            <div class="service-details">
                                <div class="detail-item">
                                    <i class="fas fa-hospital"></i>
                                    <span>القسم: @service.Department?.Name</span>
                                </div>
                                <div class="detail-item">
                                    <i class="fas fa-clock"></i>
                                    <span>المدة: @service.Duration دقيقة</span>
                                </div>
                                <div class="detail-item">
                                    <i class="fas fa-money-bill-wave"></i>
                                    <span>السعر: @service.Price ريال</span>
                                </div>
                            </div>
                            <a href="~/Appointment/AddSchedule" class="btn btn-primary btn-block mt-3">
                                <i class="fas fa-calendar-plus"></i> احجز الآن
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Head {
    <style>
        .service-card {
            transition: transform 0.3s ease;
            margin-bottom: 20px;
            border: none;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }

        .service-card:hover {
            transform: translateY(-5px);
        }

        .service-icon {
            text-align: center;
            margin-bottom: 20px;
            color: #0d6efd;
        }

        .service-details {
            margin-top: 20px;
            padding-top: 15px;
            border-top: 1px solid #eee;
        }

        .detail-item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            color: #666;
        }

        .detail-item i {
            margin-right: 10px;
            width: 20px;
            color: #0d6efd;
        }

        .card-title {
            color: #333;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .card-text {
            color: #666;
            margin-bottom: 20px;
        }

        .btn-block {
            width: 100%;
            padding: 10px;
            font-weight: 500;
        }

        .btn-block i {
            margin-right: 5px;
        }
    </style>
}

@section Footer {
    <!-- jQuery -->
    <script src="~/assets/js/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Slimscroll JS -->
    <script src="~/assets/js/jquery.slimscroll.min.js"></script>

    <!-- Custom JS -->
    <script src="~/assets/js/script.js"></script>
} 