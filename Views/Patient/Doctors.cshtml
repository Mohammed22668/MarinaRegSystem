@model IEnumerable<MarinaRegSystem.Models.Doctor>

@{
    Layout = "_LayoutPatient";
    ViewData["Title"] = "قائمة الأطباء";
}

@section currentPage {
    <li class="breadcrumb-item active">الاطباء </li>
}

@section Head {
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
        <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
        <title>مستشفى مارينا - الأطباء</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.rtl.min.css">

        <!-- Fontawesome CSS -->
        <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
        <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">

        <!-- Select2 CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/select2.min.css">

        <!-- Datatables CSS -->
        <link rel="stylesheet" href="~/assets/plugins/datatables/datatables.min.css">

        <!-- Feathericon CSS -->
        <link rel="stylesheet" href="~/assets/css/feather.css">

        <!-- Main CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">

    </head>
}


<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .doctor-card {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
    }

    .doctor-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-weight: bold;
        color: #007bff;
    }

    .card-subtitle {
        color: #6c757d;
    }

    .icon-wrapper {
        font-size: 1.2rem;
        color: #007bff;
        margin-left: 8px;
    }

    .btn-custom {
        border-radius: 50px;
        padding: 0.4rem 1rem;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            لا يوجد أطباء متاحين في الوقت الحالي.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var doctor in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="card shadow-sm doctor-card h-100">
                        <div class="card-body d-flex flex-column">
                            <!-- اسم الطبيب -->
                            <h5 class="card-title">@doctor.Name</h5>

                            <!-- القسم -->
                            <h6 class="card-subtitle mb-3 text-muted">
                                <i class="fas fa-stethoscope icon-wrapper"></i> القسم: @doctor.Department?.Name
                            </h6>

                            <!-- التخصص والهاتف -->
                            <div class="mb-3">
                                @if (!string.IsNullOrEmpty(doctor.Speciality))
                                {
                                    <p class="mb-1">
                                        <i class="fas fa-user-md icon-wrapper"></i>
                                        <strong>الاختصاص:</strong> @doctor.Speciality
                                    </p>
                                }

                                @if (!string.IsNullOrEmpty(doctor.Phone))
                                {
                                    <p class="mb-1">
                                        <i class="fas fa-phone icon-wrapper"></i>
                                        <strong>الهاتف:</strong> @doctor.Phone
                                    </p>
                                }
                            </div>

                            <!-- زر تفاصيل أو حجز -->
                            <a href="@Url.Action("AddSchedule", "Patient", new { doctorId = doctor.Id })"
                               class="btn btn-primary btn-custom mt-auto">
                                <i class="fas fa-calendar-check me-1"></i> حجز موعد
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Patient")" class="btn btn-outline-secondary btn-custom">
            <i class="fas fa-arrow-left me-1"></i> العودة إلى الصفحة الرئيسية
        </a>
    </div>
</div>





@section Footer{
   <!-- jQuery -->
<script src="~/assets/js/jquery-3.7.1.min.js"></script>

<!-- Bootstrap JS -->
<script src="~/assets/js/bootstrap.bundle.min.js"></script>

<!-- Feather Js -->
<script src="~/assets/js/feather.min.js"></script>

<!-- Slimscroll -->
<script src="~/assets/js/jquery.slimscroll.js"></script>

<!-- Select2 Js -->
<script src="~/assets/js/select2.min.js"></script>

<!-- Datepicker JS -->
<script src="~/assets/plugins/moment/moment.min.js"></script>
<script src="~/assets/js/bootstrap-datetimepicker.min.js"></script>

<!-- Custom JS -->
<script src="~/assets/js/script.js"></script>

<!-- Validation Scripts -->
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}