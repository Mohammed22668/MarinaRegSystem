@model IEnumerable<MarinaRegSystem.Models.Doctor>

@{
    Layout = "_LayoutPatient";
    ViewData["Title"] = "قائمة الأطباء";
}

@section currentPage {
    <li class="breadcrumb-item active">الأطباء</li>
}

@section Head {

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
        <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
        <title>مستشفى مارينا - الأطباء</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.rtl.min.css">

        <!-- Fontawesome CSS -->
        <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
        <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">

        <!-- Feathericon CSS -->
        <link rel="stylesheet" href="~/assets/css/feather.css">

        <!-- Main CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">

        <style>
            body {
                background-color: #f4f6f9;
                font-family: 'Tajawal', sans-serif;
            }

            .doctor-card {
                border-radius: 15px;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
                transition: transform 0.3s ease;
                border: none;
                overflow: hidden;
                height: 100%;
                background-color: white;
            }

            .doctor-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            }

            .doctor-image {
                width: 100px;
                height: 100px;
                object-fit: cover;
                border-radius: 50%;
                margin: auto;
                display: block;
                border: 4px solid #007bff;
                box-shadow: 0 4px 15px rgba(0, 123, 255, 0.2);
            }

            .card-body {
                text-align: center;
            }

            .card-title {
                font-weight: bold;
                color: #007bff;
            }

            .card-subtitle {
                color: #6c757d;
            }

            .info-item {
                font-size: 0.95rem;
                color: #555;
            }

            .info-item i {
                color: #007bff;
                width: 20px;
                text-align: center;
            }

            .btn-book {
                border-radius: 50px;
                padding: 0.5rem 1.2rem;
                font-weight: bold;
                width: 100%;
            }

            .doctor-card .btn-book:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

            .doctor-card {
                transition: all 0.3s ease;
                background: #ffffff;
                border: none;
                height: 100%;
            }

            .doctor-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1) !important;
            }

            .card-body {
                padding: 0.5rem;
            }

            .text-truncate {
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            /* ضبط الصورة */
            .doctor-image {
                height: 80px !important;
                width: 80px !important;
                object-fit: cover;
                border: 3px solid #007bff;
                border-radius: 50%;
                margin: 15px auto;
                display: block;
                box-shadow: 0 4px 10px rgba(0, 123, 255, 0.15);
            }
        </style>
    </head>
}

<div class="container py-5">
    <h2 class="mb-5 text-center">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            لا يوجد أطباء متاحين في الوقت الحالي.
        </div>
    }
    else
    {
        var sortedDoctors = Model.OrderByDescending(d => d.Rating).ToList();

        <div class="row g-3 justify-content-center">
            @foreach (var doctor in sortedDoctors)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                    <div class="card shadow-sm doctor-card h-200 border-0" style="border-radius: 12px; overflow: hidden;">
                        <div class="position-relative">
                            <img class="doctor-image w-100"
                                src="@(string.IsNullOrEmpty(doctor.ImageUrl) ? "/assets/img/doctors/doctor-thumb-03.jpg" : doctor.ImageUrl)"
                                alt="@doctor.Name"
                                style="height: 80px; width: 80px; object-fit: cover; border: 3px solid #007bff; border-radius: 50%; margin: 15px auto; display: block; box-shadow: 0 4px 10px rgba(0,0,0,0.1);">

                            <!-- عرض التقييم -->
                           @if (doctor.Rating > 0)
{
    <div class="position-absolute top-0 end-0 bg-warning text-white px-2 py-1 mt-2 rounded-start" 
         style="font-size: 0.75rem; transform: translateY(-50%);">
        ⭐ @doctor.Rating.ToString("0.0")
    </div>
}
                        </div>

                        <div class="card-body p-2 text-center">
                            <h6 class="card-title mb-1 text-truncate" style="font-size: 0.9rem; font-weight: bold;">@doctor.Name
                            </h6>

                            <p class="card-subtitle mb-1" style="font-size: 0.8rem;">
                                <i class="fas fa-stethoscope text-primary"></i> @doctor.Department?.Name
                            </p>

                            @if (!string.IsNullOrEmpty(doctor.Speciality))
                            {
                                <p class="info-item mb-1" style="font-size: 0.75rem;">
                                    <i class="fas fa-user-md text-muted"></i> @doctor.Speciality
                                </p>
                            }

                            <a href="@Url.Action("AddSchedule", "Patient", new { doctorId = doctor.Id })"
                                class="btn btn-sm btn-outline-primary btn-book mt-2 w-100"
                                style="font-size: 0.75rem; padding: 0.3rem 0.5rem; border-radius: 20px;">
                                <i class="fas fa-calendar-check me-1"></i> حجز
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-5">
        <a href="@Url.Action("Index", "Patient")" class="btn btn-outline-secondary btn-book px-4">
            <i class="fas fa-arrow-left me-1"></i> العودة إلى الصفحة الرئيسية
        </a>
    </div>
</div>

@section Footer {
    <!-- jQuery -->
    <script src="~/assets/js/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Feather Js -->
    <script src="~/assets/js/feather.min.js"></script>

    <!-- Slimscroll -->
    <script src="~/assets/js/jquery.slimscroll.js"></script>

    <!-- Select2 Js -->
    <script src="~/assets/js/select2.min.js"></script>

    <!-- Datepicker JS -->
    <script src="~/assets/plugins/moment/moment.min.js"></script>
    <script src="~/assets/js/bootstrap-datetimepicker.min.js"></script>

    <!-- Custom JS -->
    <script src="~/assets/js/script.js"></script>

    <!-- Validation Scripts -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}