@model List<MarinaRegSystem.Models.Appointment>
@using MarinaRegSystem.Helpers;
@{
    Layout = "_LayoutPatient";
    ViewData["Title"] = "الحجوزات";
}

@section currentPage {
    <li class="breadcrumb-item active">الصفحة الرئيسية</li>
}
@section Head {

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
        <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
        <title>مستشفى مارينا - الرئيسية</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.rtl.min.css">

        <!-- Fontawesome CSS -->
        <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
        <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">

        <!-- Select2 CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/select2.min.css">

        <!-- Datatables CSS -->
        <link rel="stylesheet" href="~/assets/plugins/datatables/datatables.min.css">

        <!-- Feathericon CSS -->
        <link rel="stylesheet" href="~/assets/css/feather.css">

        <!-- Main CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">



        <style>
            body {
                background-color: #f8f9fa;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

            .appointments-card {
                border-radius: 15px;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
                padding: 2rem;
                margin-top: 2rem;
                background-color: white;
            }

            .status-badge {
                padding: 0.5em 0.8em;
                border-radius: 50px;
                font-size: 0.875rem;
                font-weight: 600;
                display: inline-flex;
                align-items: center;
                gap: 0.3rem;
                white-space: nowrap;
            }

            .text-pending {
                background-color: #fff9c4;
                color: #5d4037;
            }

            .text-confirmed {
                background-color: #dcedc8;
                color: #33691e;
            }

            .text-rejected {
                background-color: #ffcdd2;
                color: #b71c1c;
            }

            .text-completed {
                background-color: #bbdefb;
                color: #0d47a1;
            }

            .text-cancelled {
                background-color: #f5f5f5;
                color: #616161;
            }

            .btn-custom {
                border-radius: 50px;
                padding: 0.5rem 1.2rem;
                font-weight: 500;
            }

            .modal-content {
                border-radius: 15px;
            }

            .modal-header.bg-danger {
                background-color: #e63946 !important;
                color: white;
            }

            .form-select-lg {
                font-size: 1rem;
                padding: 0.6rem 1rem;
                border-radius: 0.5rem;
            }

            .btn-close-white .btn-close-icon {
                filter: invert(1);
            }

            /* تبويبات محسّنة */
            .nav-tabs {
                margin-bottom: 1.5rem;
                border-bottom: 2px solid #dee2e6;
            }

            .nav-tabs .nav-link {
                color: #495057;
                font-weight: 500;
                transition: all 0.3s ease;
                border-top: 3px solid transparent;
                border-radius: 0 !important;
            }

            .nav-tabs .nav-link:hover {
                color: #0d6efd;
            }

            .nav-tabs .nav-link.active {
                color: #0d6efd;
                border-color: #0d6efd;
                border-top: 3px solid #0d6efd;
                background-color: transparent;
            }

            /* استجابة للجوال */
            @@media (max-width: 576px) {

                .table td,
                .table th {
                    font-size: 0.85rem;
                    padding: 0.5rem;
                }

                .btn-sm {
                    padding: 0.25rem 0.5rem;
                    font-size: 0.75rem;
                }

                .status-badge {
                    font-size: 0.8rem;
                    padding: 0.4em 0.6em;
                }

                .btn-custom {
                    padding: 0.4rem 1rem;
                    font-size: 0.9rem;
                }
            }
        </style>
    </head>
}

<div class="container appointments-container py-4">
    <h2 class="mb-4 text-center fw-bold">حجوزاتي</h2>

    <!-- زر إضافة حجز جديد -->
    <div class="d-flex justify-content-end mb-4">
        <a href="~/Patient/AddSchedule" class="btn btn-success btn-lg px-4 rounded-pill shadow-sm">
            <i class="fas fa-plus-circle me-2"></i> تقديم حجز جديد
        </a>
    </div>

    <!-- تبويبات الحجوزات -->
    <ul class="nav nav-pills nav-fill mb-4 border-0" id="appointmentTabs" role="tablist">
        <li class="nav-item position-relative" role="presentation">
            <!-- التبويب: الحجوزات النشطة -->
            <button class="nav-link active shadow-sm px-4 py-3 rounded-pill fw-semibold" id="active-tab"
                data-bs-toggle="tab" data-bs-target="#active-appointments" type="button" role="tab"
                aria-controls="active-appointments" aria-selected="true" style="z-index: 2;">
                <i class="fas fa-clock me-2 transition-icon"></i>
                <span>الحجوزات النشطة</span>
            </button>
        </li>
        <li class="nav-item position-relative" role="presentation">
            <!-- التبويب: الحجوزات السابقة -->
            <button class="nav-link shadow-sm px-4 py-3 rounded-pill fw-semibold " id="closed-tab" data-bs-toggle="tab"
                data-bs-target="#closed-appointments" type="button" role="tab" aria-controls="closed-appointments"
                aria-selected="false" style="z-index: 2;">
                <i class="fas fa-history me-2 transition-icon"></i>
                <span>الحجوزات السابقة</span>
            </button>
        </li>

        <!-- خط تحتي متحرك (مؤشر) -->
        <li class="position-absolute bottom-0 start-0 p-0 w-50 transition-all duration-300 z-1" id="tab-indicator"
            style="height: 3px; background: #0d6efd; transform: translateX(0);"></li>
    </ul>

    <!-- محتوى التبويبات -->
    <div class="tab-content" id="appointmentTabsContent">

        <!-- التبويب الأول: الحجوزات النشطة (قيد الانتظار + مقبول) -->
        <div class="tab-pane fade show active" id="active-appointments" role="tabpanel" aria-labelledby="active-tab">
            @if (Model.Any(a => a.Status == AppointmentStatus.Pending || a.Status == AppointmentStatus.Confirmed))
            {
                <div class="table-responsive shadow-sm rounded-3 overflow-hidden d-none d-md-block">
                    <table class="table table-hover align-middle mb-0 bg-white">
                        <thead class="bg-gradient-primary text-white">
                            <tr>
                                <th>القسم</th>
                                <th>الطبيب</th>
                                <th>التاريخ</th>
                                <th>الوقت</th>
                                <th>الحالة</th>
                                <th>ملاحظات</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appt in Model
                                                    .Where(a => a.Status == AppointmentStatus.Pending || a.Status == AppointmentStatus.Confirmed)
                                                    .OrderByDescending(a => a.AppointmentDate)
                                                    .ThenByDescending(a => a.AppointmentTime))
                            {
                                var statusClass = appt.Status switch
                                {
                                    AppointmentStatus.Pending => "text-warning-emphasis bg-warning-subtle",
                                    AppointmentStatus.Confirmed => "text-success-emphasis bg-success-subtle",
                                    _ => ""
                                };
                                bool isEditable = appt.Status == AppointmentStatus.Pending;

                                <tr class="border-bottom">
                                    <td>@appt.Department?.Name</td>
                                    <td>@appt.Doctor?.Name</td>
                                    <td>@appt.AppointmentDate.ToString("yyyy-MM-dd")</td>
                                    <td>@appt.AppointmentTime.ToString(@"hh\:mm")</td>
                                    <td>
                                        <span class="status-badge px-2 py-1 rounded-pill fw-semibold @statusClass"
                                            style="font-size: 0.8rem;">
                                            <i
                                                class="fas @(appt.Status == AppointmentStatus.Pending ? "fa-clock" : "fa-check-circle") me-1"></i>
                                            @appt.Status.GetDisplayName()
                                        </span>
                                    </td>
                                    <td class="text-muted small">@(!string.IsNullOrEmpty(appt.Notes) ? appt.Notes : "—")</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-1">
                                            @if (isEditable)
                                            {
                                                <a href="~/Patient/EditSchedule/@appt.Id" class="btn btn-sm btn-outline-primary"
                                                    title="تعديل">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal"
                                                    data-bs-target="#cancelModal" data-id="@appt.Id" title="إلغاء">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-secondary" disabled title="غير قابل للتعديل">
                                                    <i class="fas fa-lock"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- ✅ عرض كـ Cards على الهاتف فقط -->
                <div class="d-md-none">
                    @foreach (var appt in Model
                                    .Where(a => a.Status == AppointmentStatus.Pending || a.Status == AppointmentStatus.Confirmed)
                                    .OrderByDescending(a => a.AppointmentDate)
                                    .ThenByDescending(a => a.AppointmentTime))
                    {
                        var statusClass = appt.Status switch
                        {
                            AppointmentStatus.Pending => "text-warning-emphasis bg-warning-subtle",
                            AppointmentStatus.Confirmed => "text-success-emphasis bg-success-subtle",
                            _ => ""
                        };
                        bool isEditable = appt.Status == AppointmentStatus.Pending;

                        <div class="card mb-3 shadow-sm border-0 rounded-4">
                            <div class="card-body">
                                <h6 class="fw-bold text-primary mb-2">@appt.Department?.Name - @appt.Doctor?.Name</h6>
                                <p class="mb-1"><i class="fas fa-calendar-alt me-1 text-secondary"></i>
                                    @appt.AppointmentDate.ToString("yyyy-MM-dd")</p>
                                <p class="mb-1"><i class="fas fa-clock me-1 text-secondary"></i>
                                    @appt.AppointmentTime.ToString(@"hh\:mm")</p>
                                <p class="mb-1">
                                    <span class="badge @statusClass px-2 py-1 rounded-pill">
                                        <i
                                            class="fas @(appt.Status == AppointmentStatus.Pending ? "fa-clock" : "fa-check-circle") me-1"></i>
                                        @appt.Status.GetDisplayName()
                                    </span>
                                </p>
                                @if (!string.IsNullOrEmpty(appt.Notes))
                                {
                                    <p class="text-muted small mt-2"><i class="fas fa-sticky-note me-1"></i> @appt.Notes</p>
                                }

                                <div class="d-flex gap-2 mt-3">
                                    @if (isEditable)
                                    {
                                        <a href="~/Patient/EditSchedule/@appt.Id" class="btn btn-sm btn-outline-primary w-50">
                                            <i class="fas fa-edit me-1"></i> تعديل
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger w-50" data-bs-toggle="modal"
                                            data-bs-target="#cancelModal" data-id="@appt.Id">
                                            <i class="fas fa-times me-1"></i> إلغاء
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-secondary w-100" disabled>
                                            <i class="fas fa-lock me-1"></i> غير قابل للتعديل
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-check text-muted" style="font-size: 3rem; opacity: 0.5;"></i>
                    <p class="mt-3 text-muted fs-5">لا توجد حجوزات نشطة حالياً</p>
                </div>
            }
        </div>

        <!-- التبويب الثاني: الحجوزات المغلقة (مكتمل، مرفوض، ملغي) -->
        <div class="tab-pane fade" id="closed-appointments" role="tabpanel" aria-labelledby="closed-tab">
            @if (Model.Any(a => a.Status == AppointmentStatus.Completed ||
                        a.Status == AppointmentStatus.Rejected ||
                        a.Status == AppointmentStatus.Cancelled))
            {
                <!-- ✅ عرض الجدول للشاشات المتوسطة فما فوق -->
                <div class="table-responsive shadow-sm rounded-3 overflow-hidden d-none d-md-block">
                    <table class="table table-hover align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr>
                                <th>القسم</th>
                                <th>الطبيب</th>
                                <th>التاريخ</th>
                                <th>الوقت</th>
                                <th>الحالة</th>
                                <th>ملاحظات</th>
                                <th>التفاصيل</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appt in Model
                                                    .Where(a =>
                                                    a.Status == AppointmentStatus.Completed ||
                                                    a.Status == AppointmentStatus.Rejected ||
                                                    a.Status == AppointmentStatus.Cancelled)
                                                    .OrderByDescending(a => a.AppointmentDate)
                                                    .ThenByDescending(a => a.AppointmentTime))
                            {
                                var statusIcon = appt.Status switch
                                {
                                    AppointmentStatus.Completed => "fa-check-double text-success",
                                    AppointmentStatus.Rejected => "fa-times-circle text-danger",
                                    AppointmentStatus.Cancelled => "fa-trash-alt text-secondary",
                                    _ => "fa-info-circle text-muted"
                                };

                                <tr class="opacity-75">
                                    <td>@appt.Department?.Name</td>
                                    <td>@appt.Doctor?.Name</td>
                                    <td>@appt.AppointmentDate.ToString("yyyy-MM-dd")</td>
                                    <td>@appt.AppointmentTime.ToString(@"hh\:mm")</td>
                                    <td>
                                        <span class="d-flex align-items-center text-muted">
                                            <i class="fas @statusIcon me-2"></i>
                                            @appt.Status.GetDisplayName()
                                        </span>
                                    </td>
                                    <td class="text-muted small">
                                        @(string.IsNullOrEmpty(appt.Notes) ? "—" : appt.Notes)
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-info" data-bs-toggle="collapse"
                                            data-bs-target="#notes-@appt.Id" title="عرض/إخفاء الملاحظات">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <div class="collapse mt-2" id="notes-@appt.Id">
                                            <div class="alert alert-info p-2 small mb-0">
                                                <strong>ملاحظات:</strong>
                                                @(string.IsNullOrEmpty(appt.Notes) ? "لا توجد ملاحظات." : appt.Notes)
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- ✅ عرض على الجوال كـ Cards -->
                <div class="d-md-none">
                    @foreach (var appt in Model
                                    .Where(a =>
                                    a.Status == AppointmentStatus.Completed ||
                                    a.Status == AppointmentStatus.Rejected ||
                                    a.Status == AppointmentStatus.Cancelled)
                                    .OrderByDescending(a => a.AppointmentDate)
                                    .ThenByDescending(a => a.AppointmentTime))
                    {
                        var statusIcon = appt.Status switch
                        {
                            AppointmentStatus.Completed => "fa-check-double text-success",
                            AppointmentStatus.Rejected => "fa-times-circle text-danger",
                            AppointmentStatus.Cancelled => "fa-trash-alt text-secondary",
                            _ => "fa-info-circle text-muted"
                        };

                        <div class="card mb-3 shadow-sm border-0 rounded-4 opacity-75">
                            <div class="card-body">
                                <h6 class="fw-bold text-primary mb-2">@appt.Department?.Name - @appt.Doctor?.Name</h6>
                                <p class="mb-1"><i class="fas fa-calendar-alt me-1 text-secondary"></i>
                                    @appt.AppointmentDate.ToString("yyyy-MM-dd")</p>
                                <p class="mb-1"><i class="fas fa-clock me-1 text-secondary"></i>
                                    @appt.AppointmentTime.ToString(@"hh\:mm")</p>
                                <p class="mb-1">
                                    <span class="d-flex align-items-center text-muted">
                                        <i class="fas @statusIcon me-2"></i>
                                        @appt.Status.GetDisplayName()
                                    </span>
                                </p>

                                @if (!string.IsNullOrEmpty(appt.Notes))
                                {
                                    <div class="alert alert-info p-2 mt-2 small mb-0">
                                        <strong>ملاحظات:</strong> @appt.Notes
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-archive text-muted" style="font-size: 3rem; opacity: 0.5;"></i>
                    <p class="mt-3 text-muted fs-5">لا توجد حجوزات مغلقة حتى الآن</p>
                </div>
            }
        </div>
    </div>

    <!-- زر العودة إلى الصفحة الرئيسية -->
    <div class="text-center mt-5">
        <a href="~/Patient/Index" class="btn btn-outline-primary btn-lg px-5 rounded-pill">
            <i class="fas fa-home me-2"></i> العودة إلى الصفحة الرئيسية
        </a>
    </div>
</div>

<!-- نموذج إلغاء الحجز (Modal) -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <form id="cancelForm" method="post" asp-action="CancelSchedule" asp-controller="Patient">
                <div class="modal-header bg-danger text-white rounded-top">
                    <h5 class="modal-title" id="cancelModalLabel">تأكيد إلغاء الحجز</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="إغلاق"></button>
                </div>
                <div class="modal-body p-4">
                    <input type="hidden" name="Id" id="cancelAppointmentId" />
                    <p class="text-center text-danger fw-bold">
                        هل أنت متأكد أنك تريد إلغاء هذا الحجز؟
                    </p>
                    <div class="mb-3">
                        <label for="CancelReason" class="form-label fw-bold">اختر سبب الإلغاء:</label>
                        <select class="form-select form-select-lg" name="CancelReason" required>
                            <option value="">اختر السبب</option>
                            <option value="تم تأجيل الموعد">تم تأجيل الموعد</option>
                            <option value="تم الحجز بالخطأ">تم الحجز بالخطأ</option>
                            <option value="ظرف طارئ">ظرف طارئ</option>
                            <option value="تأخر في الرد على الحجز">تأخر في الرد على الحجز</option>
                            <option value="تغير الحالة الصحية">تغير الحالة الصحية</option>
                            <option value="سبب آخر">سبب آخر</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">إغلاق</button>
                    <button type="submit" class="btn btn-danger px-4 d-flex align-items-center gap-2">
                        <i class="fas fa-times-circle"></i> تأكيد الإلغاء
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // ربط معرف الحجز بالنموذج عند فتح النافذة المنبثقة
        var cancelModal = document.getElementById('cancelModal');
        cancelModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var appointmentId = button.getAttribute('data-id');
            document.getElementById('cancelAppointmentId').value = appointmentId;
        });
    </script>

    <!-- تحسين التبويبات -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tabs = new bootstrap.Tab('#active-tab');
            // يمكنك إضافة المزيد من التفاعلات هنا إذا لزم الأمر
        });
    </script>
}


@section Footer {
    <!-- jQuery -->
    <script src="~/assets/js/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Feather Js -->
    <script src="~/assets/js/feather.min.js"></script>

    <!-- Slimscroll -->
    <script src="~/assets/js/jquery.slimscroll.js"></script>

    <!-- Select2 Js -->
    <script src="~/assets/js/select2.min.js"></script>

    <!-- Datepicker JS -->
    <script src="~/assets/plugins/moment/moment.min.js"></script>
    <script src="~/assets/js/bootstrap-datetimepicker.min.js"></script>

    <!-- Custom JS -->
    <script src="~/assets/js/script.js"></script>

    <!-- Validation Scripts -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}