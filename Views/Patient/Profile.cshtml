@model MarinaRegSystem.Models.Patient

@{
    Layout = "_LayoutPatient";
    ViewData["Title"] = "الصفحة الشخصية";
}

@section currentPage {
    <li class="breadcrumb-item active">الصفحة الشخصية</li>
}

@section Head {
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
        <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
        <title>مستشفى مارينا - الصفحة الشخصية</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.rtl.min.css">

        <!-- Fontawesome CSS -->
        <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
        <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">

        <!-- Feathericon CSS -->
        <link rel="stylesheet" href="~/assets/css/feather.css">

        <!-- Main CSS -->
        <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">

        <style>
            body {
                background-color: #f4f6f9; 
            }

            .profile-container {
                max-width: 800px;
                margin: 2rem auto;
            }

            .card-profile {
                border-radius: 15px;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
                transition: transform 0.3s ease;
                padding: 2rem;
            }

            .card-profile:hover {
                transform: translateY(-5px);
            }

            .profile-title {
                font-weight: bold;
                color: #333;
            }

            .profile-data {
                font-size: 1.1rem;
                color: #555;
            }

            .btn-edit {
                border-radius: 50px;
                padding: 0.6rem 1.5rem;
                font-weight: bold;
                width: 100%;
            }

            .alert-success {
                max-width: 800px;
                margin: 1rem auto;
            }
        </style>
    </head>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}

<div class="profile-container">
    <div class="card card-profile">
        <h3 class="text-center mb-4">ملف المريض الشخصي</h3>

        <div class="row g-3">
            <div class="col-md-6">
                <p><strong class="profile-title">الاسم الكامل:</strong> <span class="profile-data">@Model.FullName</span></p>
            </div>
            <div class="col-md-6">
                <p><strong class="profile-title">تاريخ الميلاد:</strong> <span class="profile-data">@Model.DateOfBirth.ToString("yyyy-MM-dd")</span></p>
            </div>
            <div class="col-md-6">
                <p><strong class="profile-title">الجنس:</strong> <span class="profile-data">@Model.Gender</span></p>
            </div>
            <div class="col-md-6">
                <p><strong class="profile-title">الرقم الوطني:</strong> <span class="profile-data">@Model.NationalNumber</span></p>
            </div>
            <div class="col-md-6">
                <p><strong class="profile-title">العنوان:</strong> <span class="profile-data">@Model.Address</span></p>
            </div>
            <div class="col-md-6">
                <p><strong class="profile-title">المحافظة:</strong> <span class="profile-data">@Model.Province</span></p>
            </div>
            <div class="col-md-6">
                <p><strong class="profile-title">البلد:</strong> <span class="profile-data">@Model.Country</span></p>
            </div>
            <div class="col-md-6">
                <p><strong class="profile-title">فصيلة الدم:</strong> <span class="profile-data">@Model.BloodType</span></p>
            </div>
            <div class="col-md-6">
                <p><strong class="profile-title">الحساسية:</strong> <span class="profile-data">@Model.Allergies</span></p>
            </div>
            <div class="col-md-6">
                <p><strong class="profile-title">الأمراض المزمنة:</strong> <span class="profile-data">@Model.ChronicDiseases</span></p>
            </div>
        </div>

        <div class="mt-4 d-grid">
            <a asp-action="EditProfile" class="btn btn-primary btn-edit">
                <i class="fas fa-user-edit me-1"></i> تعديل البيانات
            </a>
        </div>
    </div>
</div>

@section Footer {
    <!-- jQuery -->
    <script src="~/assets/js/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Feather Js -->
    <script src="~/assets/js/feather.min.js"></script>

    <!-- Custom JS -->
    <script src="~/assets/js/script.js"></script>

    <!-- Validation Scripts -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}