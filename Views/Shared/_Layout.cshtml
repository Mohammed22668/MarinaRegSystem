<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
    <title>مستشفى مارينا - @ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.rtl.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">

    <!-- Feathericon CSS -->
    <link rel="stylesheet" href="~/assets/css/feather.css">

    <!-- Main CSS -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">

    @RenderSection("Head", required: false)
</head>
<body>
    <div class="main-wrapper">
        <!-- Header -->
        <div class="header">
            <div class="header-left">
                <a href="#" class="logo">
                    <img src="~/assets/img/logo.png" width="35" height="35" alt=""> <span>Marina Hospital</span>
                </a>
            </div>
            <a id="toggle_btn" href="javascript:void(0);"><img src="~/assets/img/icons/bar-icon.svg" alt=""></a>
            <a id="mobile_btn" class="mobile_btn float-start" href="#sidebar"><img src="~/assets/img/icons/bar-icon.svg" alt=""></a>

            <ul class="nav user-menu float-end">
                <li class="nav-item dropdown has-arrow user-profile-list">
                    <a href="#" class="dropdown-toggle nav-link user-link" data-bs-toggle="dropdown">
                        <div class="user-names">
                            <h5>@ViewBag.Username</h5>
                        </div>
                        <span class="user-img">
                            <img src="~/assets/img/user.jpg" alt="User">
                        </span>
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">حسابي</a>
                        <a class="dropdown-item" href="~/Home/Logout">تسجيل خروج</a>
                    </div>
                </li>
            </ul>

            <div class="dropdown mobile-user-menu float-end">
                <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-ellipsis-vertical"></i></a>
                <div class="dropdown-menu dropdown-menu-end">
                    <a class="dropdown-item" href="#">حسابي</a>
                    <a class="dropdown-item" href="~/Home/Logout">تسجيل الخروج</a>
                </div>
            </div>
        </div>
        <!-- /Header -->

        <!-- Sidebar -->
        <div class="sidebar" id="sidebar" style="top: 90px !important; border-top-left-radius:0px!important">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title" style="font-weight:bolder">الرئيسية</li>

                        @if (ViewBag.Role == "Patient") {
                            <li>
                                <a href="~/Patient/Index">
                                    <span class="menu-side"><img src="~/assets/img/icons/menu-icon-01.svg" alt=""></span>
                                    <span style="font-weight:bolder">الرئيسية</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Patient/AddSchedule">
                                    <span class="menu-side"><img src="~/assets/img/icons/menu-icon-04.svg" alt=""></span>
                                    <span style="font-weight:bolder">حجز موعد</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Patient/MyAppointments">
                                    <span class="menu-side"><img src="~/assets/img/icons/menu-icon-06.svg" alt=""></span>
                                    <span style="font-weight:bolder">مواعيدي</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Patient/Doctors">
                                    <span class="menu-side"><img src="~/assets/img/icons/menu-icon-03.svg" alt=""></span>
                                    <span style="font-weight:bolder">الأطباء</span>
                                </a>
                            </li>
                        } else {
                            <li>
                                <a href="~/Patient/Index">
                                    <span class="menu-side"><img src="~/assets/img/icons/menu-icon-01.svg" alt=""></span>
                                    <span style="font-weight:bolder">لوحة التحكم</span>
                                </a>
                            </li>
                            <li class="submenu">
                                <a href="#">
                                    <span class="menu-side"><img src="~/assets/img/icons/menu-icon-04.svg" alt=""></span>
                                    <span style="font-weight:bolder"> الحجز الالكتروني </span>
                                    <span class="menu-arrow"></span>
                                </a>
                                <ul style="display: none;">
                                    <li><a style="font-weight:bolder" href="~/Patient/AddSchedule">الحجز مع دكتور</a></li>
                                    
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Sidebar -->

        <!-- Page Content -->
        <div class="page-wrapper">
            <div class="content">
                <div class="page-header">
                    <div class="row">
                        <div class="col-sm-12">
                            <ul class="breadcrumb">
                               @RenderSection("currentPage", required: false)

                            </ul>
                        </div>
                    </div>
                </div>

                @RenderBody()
            </div>
        </div>
        <!-- /Page Content -->
    </div>

    <div class="sidebar-overlay" data-reff=""></div>

    @RenderSection("Footer", required: false)

    @RenderSection("Scripts", required: false)
</body>
</html>
