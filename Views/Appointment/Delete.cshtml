@model MarinaRegSystem.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h2>Delete Appointment</h2>

<h3>Are you sure you want to delete this appointment?</h3>
<div>
    <h4>Appointment Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>User</dt>
        <dd>@Model.UserId</dd>
        <dt>Department</dt>
        <dd>@Model.Department.Name</dd>
        <dt>Service</dt>
      
        <dt>Doctor</dt>
        <dd>@Model.Doctor.Name</dd>
        <dt>Date</dt>
        <dd>@Model.AppointmentDate.ToShortDateString()</dd>
        <dt>Time</dt>
        <dd>@Model.AppointmentTime</dd>
        <dt>Status</dt>
        <dd>@Model.Status</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </form>
</div> 